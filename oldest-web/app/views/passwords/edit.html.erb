<panel>
  <h2><%= t(".title") %></h2>
  <p><%= t(".description") %></p>
  <%= form_for :password_reset,
        url: [@user, :password, token: @user.confirmation_token],
        html: { method: :put } do |form| %>
    <field>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </field>
    <field>
      <%= form.submit %>
    </field>
  <% end %>
</panel>
