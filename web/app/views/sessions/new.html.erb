<p class="flash"><%= notice %></p>
<p class="alert alert--negative"><%= alert %></p>

<% content_for :title, "Sign in" %>

<%= form_with(url: sign_in_path) do |form| %>
  <fieldset>
    <field>
      <%= form.label :email %>
      <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "mb-2"  %>
    </field>
    <field>
      <%= form.label :password %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", class: "mb-2" %>
    </field>
    <div>
      <%= form.submit "Sign in", class: "positive" %>
    </div>
  </fieldset>
<% end %>

<br>

<div>
  <%= link_to "Sign up", sign_up_path %> |
  <%= link_to "Forgot your password?", new_identity_password_reset_path %>
</div>
