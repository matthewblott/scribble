<button data-controller="bridge--button" data-bridge-ios-image="person.circle" data-bridge-side="left" class="non-turbo-native:hidden" onclick="alert('hello')">Save</button>
<div data-controller="note">
  <controls role="group">
    <a role="button" href="<%= notes_path %>" class="radius-0">Back</a>
    <button data-action="click->note#clear" class="radius-0">Clear</button>
    <button data-action="click->note#toText" class="radius-0">Text</button>
    <input type="hidden" name="text" form="note-form" data-note-target="text">
  </controls>
  <canvas data-note-target="canvas"></canvas>
  <input type="hidden" name="img" data-note-target="img" form="note-form">
  <button form="note-form" type="submit" data-search-field-target="submit" hidden data-note-target="submit"></button>
</div>
<%= form_with(url: notes_path, :html => {:id => 'note-form'}) do %>
<% end %>

